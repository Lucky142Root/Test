<?php
$x=7;
$y=10;
$z=$x+$y;
echo "x=$x;y=$y<br/>";
echo "сумма x и y равна $z";
echo "<br/> Разность x и y равна"  . ($x-$y);
echo"<br/>Произведени x и y равно" . ($x*$y);
echo "<br/>Результат деления x на y" . ($x/$y);
echo "<br/>Остаток от  деления x на y" . ($x%$y);
echo "<br/> x в степени y равен".($x**$y);
echo "<br/> Квадратный корень из x равен ".($x**(0.5));
$x++;
$x=$x+1;
echo "<br/>x=$x";
$y--;
$y=$y-1;
echo"<br/>y=$y";
?>
